{
    "compilerOptions": {
        "charset": "utf8",
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
          "es5",
          "es6",
          "dom",
          "es2015.promise"
        ],
        "module": "amd",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitThis": true,
        "sourceMap": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "strict": true,
        "target": "es5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}